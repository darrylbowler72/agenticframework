FROM python:3.11-slim

WORKDIR /app

# Install curl for health checks
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Copy MCP server requirements and install dependencies
COPY backend/mcp-server/github/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy MCP server code
COPY backend/mcp-server/github/ /app/

# Set Python path
ENV PYTHONPATH=/app

# Expose MCP server port
EXPOSE 8100

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8100/health')"

# Run the MCP server
CMD ["uvicorn", "server:app", "--host", "0.0.0.0", "--port", "8100"]
