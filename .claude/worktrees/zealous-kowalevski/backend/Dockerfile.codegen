FROM python:3.11-slim

WORKDIR /app

# Copy VERSION file for semantic versioning
COPY VERSION /VERSION

# Copy common modules and requirements
COPY backend/agents/common/ /app/common/
COPY backend/agents/common/requirements.txt /app/requirements.txt

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy codegen agent
COPY backend/agents/codegen/ /app/codegen/

# Set Python path
ENV PYTHONPATH=/app

# Expose port
EXPOSE 8001

# Run the agent
CMD ["uvicorn", "codegen.main:app", "--host", "0.0.0.0", "--port", "8001"]
