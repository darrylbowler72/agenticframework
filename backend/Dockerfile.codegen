FROM python:3.11-slim

ARG VERSION=1.1.0
LABEL org.opencontainers.image.title="codegen-agent" \
      org.opencontainers.image.description="DevOps Agentic Framework - CodeGen Agent" \
      org.opencontainers.image.version="${VERSION}" \
      org.opencontainers.image.source="https://github.com/darrylbowler72/agenticframework"

WORKDIR /app

# Copy VERSION file for semantic versioning
COPY VERSION /VERSION

# Copy common modules and requirements
COPY backend/agents/common/ /app/common/
COPY backend/agents/common/requirements.txt /app/requirements.txt

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy codegen agent
COPY backend/agents/codegen/ /app/codegen/

# Set Python path
ENV PYTHONPATH=/app

# Expose port
EXPOSE 8001

# Run the agent
CMD ["uvicorn", "codegen.main:app", "--host", "0.0.0.0", "--port", "8001"]
