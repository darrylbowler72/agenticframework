FROM python:3.11-slim

WORKDIR /app

# Copy common modules and requirements
COPY agents/common/ /app/common/
COPY agents/common/requirements.txt /app/requirements.txt

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy codegen agent
COPY agents/codegen/ /app/codegen/

# Set Python path
ENV PYTHONPATH=/app

# Expose port
EXPOSE 8001

# Run the agent
CMD ["uvicorn", "codegen.main:app", "--host", "0.0.0.0", "--port", "8001"]
