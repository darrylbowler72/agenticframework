FROM python:3.11-slim

ARG VERSION=1.1.0
LABEL org.opencontainers.image.title="migration-agent" \
      org.opencontainers.image.description="DevOps Agentic Framework - Migration Agent" \
      org.opencontainers.image.version="${VERSION}" \
      org.opencontainers.image.source="https://github.com/darrylbowler72/agenticframework"

WORKDIR /app

# Install curl for health checks
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Copy VERSION file for semantic versioning
COPY VERSION /VERSION

# Copy common modules and requirements
COPY backend/agents/common/ /app/common/
COPY backend/agents/common/requirements.txt /app/requirements.txt

# Install dependencies + YAML support
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir pyyaml==6.0.1

# Copy migration agent
COPY backend/agents/migration/ /app/migration/

# Set Python path
ENV PYTHONPATH=/app

# Expose port
EXPOSE 8004

# Run the agent
CMD ["uvicorn", "migration.main:app", "--host", "0.0.0.0", "--port", "8004"]
