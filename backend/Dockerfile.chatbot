FROM python:3.11-slim

ARG VERSION=1.1.0
LABEL org.opencontainers.image.title="chatbot-agent" \
      org.opencontainers.image.description="DevOps Agentic Framework - Chatbot Agent" \
      org.opencontainers.image.version="${VERSION}" \
      org.opencontainers.image.source="https://github.com/darrylbowler72/agenticframework"

WORKDIR /app

# Install curl for health checks
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Copy VERSION file for semantic versioning
COPY VERSION /VERSION

# Copy common modules and requirements
COPY backend/agents/common/ /app/common/
COPY backend/agents/common/requirements.txt /app/requirements.txt

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir httpx==0.27.0

# Copy chatbot agent (including templates and static)
COPY backend/agents/chatbot/ /app/chatbot/

# Set Python path
ENV PYTHONPATH=/app

# Expose port
EXPOSE 8003

# Run the agent
CMD ["uvicorn", "chatbot.main:app", "--host", "0.0.0.0", "--port", "8003"]
